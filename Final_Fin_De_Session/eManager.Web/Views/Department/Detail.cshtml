@using eManager.Domain
@model eManager.Domain.Department

@{
    ViewBag.Title = "Detail";
}

<h2>@Model.Name</h2>



@Html.ActionLink("Create an employee", "Create", "Employee", new { departmentId = @Model.Id}, null)
<table>
    <tr>
        <th>Name</th>
        <th>Id</th>
    </tr>
    @foreach(var employee in Model.Employees)
    {
        <tr>
            <td>@employee.Name</td>
            <td>@employee.Id</td>
        </tr>
    }

</table>

