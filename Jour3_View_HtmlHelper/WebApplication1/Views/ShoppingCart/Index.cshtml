@model Jour3_View.Models.ShoppingCartViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Shopping Cart</h2>
<fieldset>
    <legend>Shopping cart</legend>
<table>
    <caption>Products in Cart</caption>
    <thead>
        <tr>
            <td>Product</td>
            <td>Price</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model.Products)
        {
            <tr>
                <td>@i.Title</td><td>@i.Price</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
        <td><strong>Total</strong></td><td>@Model.CartTotal</td>
        </tr>
    </tfoot>        
</table>

</fieldset>

