
@{
    ViewBag.Title = "Index";
}
@using Jour3_HtmlHelper.Models;

<h2>Index</h2>
@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
    <table>
        <tr>
            <td>@Html.Label("Name:")</td>
            <td>@Html.TextBox("Name")</td>
        </tr>
        <tr>
            <td>@Html.Label("Password:")</td>
            <td>@Html.Password("Pwd")</td>
        </tr>
        <tr>
            <td>@Html.Label("Gender:")</td>
            <td>Male: @Html.RadioButton("Gender", "Male", true) Female: @Html.RadioButton("Gender", "Female")</td>
        </tr>
        <tr>
            <td>@Html.Label("Is Newly Enrolled:")</td>
            <td>@Html.CheckBox("IsNewlyEnrolled")</td>
        </tr>
        <tr>
            <td>@Html.Label("Student Gender:")</td>
            <td>
                @Html.DropDownList("StudentGender", new SelectList(Enum.GetValues(typeof(Gender))),
                "Select Gender",
                new {@class = "form-control"})
            </td>
        </tr>
        <tr>
            <td colspan="2" style="align-content:center">
                <input type="submit" value="Sign In">
            </td>
        </tr>



    </table>



}

